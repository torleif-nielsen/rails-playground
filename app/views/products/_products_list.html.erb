<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.quantity %></td>
        <td>
          <% if product.category.present? %>
            <%= product.category.name %>
          <% end %>
        </td>
        <td>
          <%= link_to 'Show', product, class: "btn btn-primary btn-sm" %>
        </td>
        <td>
          <%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-sm" %>
        </td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
